{
  "expo": {
    "name": "답돌이",
    "slug": "Dabdori",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "4.0.5",
    "orientation": "portrait",
    "icon": "./assets/dabicon.png",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.youngwoo.dabdori",
      "buildNumber": "4.0.5",
      "infoPlist": {
        "NSMicrophoneUsageDescription":"The microphone permission is to simply convert speech to text using the Google speech to text function. No separate voice data is collected."
      }
    },
    "android": {
      "package": "co.youngwoo.dabdori",
      "versionCode": 400005,
      "permissions":[
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "notification": {
      "icon": "./assets/dabicon.png"
    }
  }
}
